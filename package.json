{
  "name": "backend-tech-test",
  "version": "1.0.0",
  "description": "Technical test for Acme Crypto Corp",
  "main": "index.js",
  "scripts": {
    "start": "node -r @babel/register src/index.js",
    "test": "npm run test:unit",
    "test:unit": "jest --config ./jest.config.unit.js",
    "test:integration": "jest --config ./jest.config.integration.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "flow": "flow",
    "flow:typed-install": "flow-typed install",
    "postinstall": "npm run flow:typed-install"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/IvanDovgal/acme-crypto-corp-backend-tech-test.git"
  },
  "author": "Ivan Dovgal",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IvanDovgal/acme-crypto-corp-backend-tech-test/issues"
  },
  "homepage": "https://github.com/IvanDovgal/acme-crypto-corp-backend-tech-test#readme",
  "dependencies": {
    "bunyan": "^1.8.12",
    "express": "^4.16.4",
    "express-jsonschema": "^1.1.6",
    "express-request-id": "^1.4.1",
    "json-schema": "^0.2.3",
    "jsonschema": "^1.2.4",
    "pg": "^7.8.2",
    "serialize-error": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-flow": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.4.0",
    "eslint": "^5.15.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "flow-bin": "^0.94.0",
    "flow-typed": "^2.5.1",
    "jest": "^24.4.0",
    "jest-config": "^24.5.0",
    "supertest": "^4.0.0"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "plugin:flowtype/recommended"
    ],
    "parser": "babel-eslint",
    "plugins": [
      "flowtype",
      "jest"
    ],
    "rules": {
      "class-methods-use-this": "warn",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/__itests__/**/*.js",
            "**/?(*.)+(itest).js",
            "**/jest.config.*.js"
          ]
        }
      ]
    },
    "env": {
      "jest/globals": true
    },
    "globals": {
      "APP": true,
      "validateSchema": true
    }
  }
}
